{
  "name": "grounded",
  "private": true,
  "version": "1.13.4",
  "type": "module",
  "scripts": {
    "dev": "ulimit -n 10240 2>/dev/null || true && vite --open",
    "dev:safe": "rm -rf src-tauri/target/doc 2>/dev/null || true && vite --open",
    "dev:kill": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true && vite",
    "dev:port": "vite --port 3001",
    "dev:tauri": "tauri dev",
    "download:models": "node scripts/download-models.js",
    "build": "vite build && node scripts/fix-sw-registration.js && node scripts/fix-transformers-imports.js",
    "build:pwa": "npm run download:models && INCLUDE_MODELS=true vite build && node scripts/fix-sw-registration.js && npm run package",
    "build:desktop": "npm run download:models && vite build && tauri build",
    "build:android": "vite build && npx cap sync android && cd android && ./gradlew assembleRelease",
    "build:android:debug": "vite build && npx cap sync android && cd android && ./gradlew assembleDebug",
    "build:ios": "vite build && npx cap sync ios",
    "build:ios:xcode": "npm run build:ios && npx cap open ios",
    "build:all": "npm run build:desktop && npm run build:android",
    "build:all:mobile": "npm run build:android && npm run build:ios",
    "build:installers": "node scripts/build-installers.js",
    "rebuild:icons": "bash scripts/rebuild-icons.sh",
    "check:prerequisites": "node scripts/check-prerequisites.js",
    "test:deep-link": "./scripts/test-password-reset-link.sh",
    "preview": "vite preview",
    "serve": "node scripts/serve-pwa.js",
    "start": "npm run build && npm run serve",
    "package": "node scripts/package.js",
    "version:patch": "node scripts/create-release.js patch --skip-build --skip-validation",
    "version:minor": "node scripts/create-release.js minor --skip-build --skip-validation",
    "version:major": "node scripts/create-release.js major --skip-build --skip-validation",
    "release:patch": "node scripts/create-release.js patch",
    "release:minor": "node scripts/create-release.js minor",
    "release:major": "node scripts/create-release.js major",
    "create-release": "node scripts/create-release.js patch",
    "changelog": "node scripts/changelog-generator.js",
    "validate:release": "node scripts/release-validator.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "tauri": "tauri"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@tauri-apps/plugin-deep-link": "^2.4.5",
    "@xenova/transformers": "^2.17.2",
    "framer-motion": "^11.18.2",
    "idb": "^7.1.1",
    "pdfmake": "^0.2.11",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sql.js": "^1.10.3"
  },
  "devDependencies": {
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/cli": "^2.9.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.16",
    "fake-indexeddb": "^5.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-pwa": "^1.2.0",
    "vite-plugin-tauri": "^4.0.0"
  }
}
